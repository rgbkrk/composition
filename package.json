{
  "name": "nteract",
  "version": "0.1.0",
  "description": "the nteract monorepo galore",
  "repository": {
    "type": "git",
    "url": "https://github.com/nteract/nteract.git"
  },
  "keywords": ["jupyter", "electron", "notebook", "nteract", "monorepo"],
  "author": "nteract contributors",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/nteract/nteract/issues"
  },
  "homepage": "https://github.com/nteract/nteract",
  "scripts": {
    "reinstall": "npm run clean && rimraf node_modules && npm install",
    "postinstall": "electron-builder install-app-deps",
    "prestart": "npm run build",
    "start": "npm run spawn",
    "spawn": "cross-env NODE_ENV=development electron .",
    "spawn:debug": "cross-env DEBUG=true NODE_ENV=development electron .",
    "clean": "rimraf lib dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lerna": "lerna bootstrap --hoist",
    "install": "npm run lerna && npm run build",
    "build": "echo 1 || lerna run build --ignore @nteract/notebook-preview-demo",
    "test": "lerna run test",
    "test:coverage": "npm run coverage",
    "test:lint": "npm run lint",
    "test:flow": "npm run flow",
    "test:packages": "jest",
    "precoverage": "mkdirp coverage && nyc npm run test:unit",
    "coverage": "nyc report --reporter=text-lcov > coverage/lcov.info",
    "flow": "flow",
    "precommit": "lint-staged"
  },
  "jest": {
    "setupFiles": ["./scripts/mockument"]
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.0.1",
    "chai-immutable": "^1.6.0",
    "cross-env": "^5.0.0",
    "electron": "^1.7.1",
    "electron-builder": "^19.11.1",
    "electron-mocha": "^4.0.0",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.5.1",
    "esdoc": "^1.0.0-alpha.1",
    "eslint": "4.3.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.46.0",
    "flow-copy-source": "^1.1.0",
    "husky": "^0.14.0",
    "jest": "^20.0.4",
    "jsdom": "^11.0.0",
    "json-loader": "^0.5.4",
    "jsonschema": "^1.1.0",
    "lerna": "^2.0.0",
    "lint-staged": "^4.0.0",
    "lodash-webpack-plugin": "^0.11.4",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.2",
    "mock-require": "^2.0.0",
    "nbschema": "^0.1.0",
    "nyc": "^11.0.3",
    "prettier": "^1.3.1",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.12.0",
    "watch": "^1.0.0",
    "webpack": "^3.1.0"
  },
  "build": {
    "electronVersion": "1.7.1",
    "appId": "io.nteract.nteract",
    "fileAssociations": {
      "ext": "ipynb",
      "name": "ipynb"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "maintainer": "nteract contributors <jupyter@googlegroups.com>",
      "target": ["deb", "AppImage", "tar.gz"],
      "desktop": {
        "Comment": "Interactive literate coding notebook",
        "Exec": "/opt/nteract/nteract %U",
        "Icon": "nteract",
        "MimeType": "application/x-ipynb+json",
        "Name": "nteract",
        "Path": "/opt/nteract/",
        "StartupNotify": "true",
        "Terminal": "false",
        "Type": "Application",
        "Categories": "Science;Development;"
      },
      "category": "science",
      "packageCategory": "editors"
    },
    "files": ["lib", "node_modules", "static"],
    "extraResources": ["bin", "example-notebooks"],
    "npmSkipBuildFromSource": true
  }
}
